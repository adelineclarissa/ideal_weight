<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ideal_Weight.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Ideal Weight App"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                x:Name="btn1"
                Text="Calculator"
                HorizontalOptions="Center"
                Clicked="calculatorClicked" />

            <Button
                x:Name="btn2"
                Text="Using API"
                HorizontalOptions="Center"
                Clicked="apiClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

